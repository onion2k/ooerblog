nav-height = 48 + 3*2px

#header
  height nav-height
  padding 0 0 20px
  nav
    font 1.2em font-title
    line-height nav-height
    background-color #EEE
    border-radius 0px 0px 5px 5px
    padding 0 20px
    ul
      list-style none
      li
        margin 0 15px 0 0
        display inline-block
      a
        color #000
        opacity 0.7
        transition 0.3s
        &:hover
          opacity 1
    ul#right
      float right
      li
        margin 0 0 0 15px
